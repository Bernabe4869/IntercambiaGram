            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/cancelarRegistro" android:layout_weight="1"
            app:layout_constraintTop_toTopOf="@+id/RegistrarseButton"
