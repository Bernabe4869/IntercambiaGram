<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradiente"
        tools:context=".MainActivity">

    <TextView
            android:text="BIENVENIDO A INTERCAMBIAGRAM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textStyle="bold" android:textSize="30sp" android:textAlignment="center"
            android:textColor="#470090"/>
    <Button
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Loginmain"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/registrarse" app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView" app:layout_constraintVertical_bias="0.991"
            android:background="#e100ff" style="@style/Widget.AppCompat.Button.Borderless"/>
    <Button
            android:text="Registrarse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registrarse" app:layout_constraintEnd_toEndOf="@+id/Loginmain"
            app:layout_constraintStart_toStartOf="@+id/Loginmain" app:layout_constraintHorizontal_bias="0.407"
            android:layout_marginBottom="44dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="#e100ff" android:textAlignment="center"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp" app:srcCompat="@raw/logointercambiagram"
            android:id="@+id/imageView" android:layout_marginTop="108dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>